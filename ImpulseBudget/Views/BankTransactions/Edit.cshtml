@model ImpulseBudget.Models.BankTransaction

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BankTransaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Transaction Direction</label>

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="IncomingCheckbox" />
                    <label class="form-check-label" for="IncomingCheckbox">
                        Incoming (money in)
                    </label>
                </div>

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="OutgoingCheckbox" />
                    <label class="form-check-label" for="OutgoingCheckbox">
                        Outgoing (expense)
                    </label>
                </div>

                <input type="hidden" asp-for="IsIncoming" id="IsIncoming" />
                <span asp-validation-for="IsIncoming" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsImported" /> @Html.DisplayNameFor(model => model.IsImported)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const incomingCb = document.getElementById("IncomingCheckbox");
            const outgoingCb = document.getElementById("OutgoingCheckbox");
            const isIncomingHidden = document.getElementById("IsIncoming");

            function setIncoming(isIncoming) {
                isIncomingHidden.value = isIncoming ? "true" : "false";
                incomingCb.checked = isIncoming;
                outgoingCb.checked = !isIncoming;
            }

            // Initialize: default to outgoing if nothing set
            if (!isIncomingHidden.value) {
                setIncoming(false); // outgoing default
            } else {
                const val = isIncomingHidden.value.toLowerCase() === "true";
                setIncoming(val);
            }

            incomingCb.addEventListener("change", function () {
                if (incomingCb.checked) {
                    setIncoming(true);
                } else {
                    // Prevent both unchecked – revert to previous state
                    setIncoming(false);
                }
            });

            outgoingCb.addEventListener("change", function () {
                if (outgoingCb.checked) {
                    setIncoming(false);
                } else {
                    // Prevent both unchecked – default to outgoing
                    setIncoming(false);
                }
            });
        });
    </script>
}

